<div class="container">
  

  <div id="formdiv" class="row justify-content-center shadow p-3 mb-3 bg-body rounded">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, data: { turbo: false }, local: true) do |f| %>
        <div class="input-group mb-3 row">
          <%= f.label :username, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded" , placeholder: "Enter your username" %>
          </div>
        </div>
        <br>
        <div class="input-group mb-3 row">
          <%= f.label :email, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address"%>
          </div>
        </div>
        
         <div class="input-group mb-3 row">
          <%= f.label :password, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password"%>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-10 text-center">
            <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-outline-success btn-lg") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <br>
  <div class="row justify-content-center">
    <div class="col-10 text-center">
      <%= link_to '[Cancel and return to Articles Listing]', articles_path %>
    </div>
  </div>
</div>
