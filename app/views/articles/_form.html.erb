<div class="container">
  

  <div id="formdiv" class="row justify-content-center shadow p-3 mb-3 bg-body rounded">
    <div class="col-10">
      <%= render 'shared/errors'%>
      <%= form_with(model: @article, data: { turbo: false }, local: true) do |f| %>
        <div class="input-group mb-3 row">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded" %>
          </div>
        </div>
        <br>
        <div class="input-group mb-3 row">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded" %>
          </div>
        </div>
        
        <div class="row justify-content-center">
          <div class="col-10 text-center">
            <%= f.submit class: "btn btn-outline-secondary btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <br>
  <div class="row justify-content-center">
    <div class="col-10 text-center">
      <%= link_to '[Cancel and return to Articles Listing]', articles_path %>
    </div>
  </div>
</div>
