<%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, data: { turbo: false }, local: true) do |f| %>
        <div class="input-group mb-3 row">
          <%= f.label :name, "Category name", class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded" , placeholder: "Enter a name" %>
          </div>
        </div>
        <br>

        <div class="row justify-content-center">
          <div class="col-10 text-center">
            <%= f.submit class: "btn btn-outline-success btn-lg" %>
          </div>
        </div>
<% end %>